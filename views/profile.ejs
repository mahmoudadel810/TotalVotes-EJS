<!-- @format -->

<%- include('./shared/header.ejs') %>

<div class="container">
  <div class="p-5 my-5 border border-success">
    <% if (fileError !== '') { %>
           <div class="form-group">
            <p>
              <%= fileError %>
            </p>
          </div>
         <% } %>
         <div class="form-group my-2 text-end">
            <button class="btn btn-danger text-end">
                <a href="/ejs/auth/logOut" style="text-decoration: none; color: rgb(7, 1, 16);">logOut</a>
            </button>

         </div>
    <div class="form-group my-2 text-center">
      <h1>Welcome</h1>
      <p>This Is Your Profile  !!</p>
      <div class="form-group my-2 text-center">
        <h2><%= user?.firstName %></h2>
        <h3><%= user?.lastName %></h3>
        <img src="<%= user?.profile_Pic %>" alt="<%= user?.firstName %>" width="20%" height="20%"  />
      </div>
      <div class="form-group my-2">
        <form action="/ejs/auth/uploadProfile" method="post" enctype="multipart/form-data" text-center>
          <div class="form-group my-2">
            <input
              type="file"
              class="form-control"
              name="picture"
              placeholder=" Please select Your picture"
              required />
          </div>
          <div class="form-group my-2">
        <button type="submit" class="btn btn-warning btn-lg">Upload Now</button>

          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('./shared/footer.ejs') %>
